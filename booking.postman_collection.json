				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate random days ahead for check-in (1–30 days from today)\r",
							"let checkInOffset = Math.floor(Math.random() * 30) + 1;\r",
							"\r",
							"// Generate random length of stay (1–10 days)\r",
							"let stayLength = Math.floor(Math.random() * 10) + 1;\r",
							"\r",
							"// Today's date\r",
							"let today = new Date();\r",
							"\r",
							"// Calculate check-in date\r",
							"let checkInDate = new Date(today);\r",
							"checkInDate.setDate(today.getDate() + checkInOffset);\r",
							"\r",
							"// Calculate check-out date (check-in + stayLength)\r",
							"let checkOutDate = new Date(checkInDate);\r",
							"checkOutDate.setDate(checkInDate.getDate() + stayLength);\r",
							"\r",
							"// Format as YYYY-MM-DD\r",
							"let checkInStr = checkInDate.toISOString().split('T')[0];\r",
							"let checkOutStr = checkOutDate.toISOString().split('T')[0];\r",
							"\r",
							"// Save in Postman environment\r",
							"pm.environment.set(\"checkinDate\", checkInStr);\r",
							"pm.environment.set(\"checkoutDate\", checkOutStr);\r",
							"\r",
							"console.log(\"Check-in:\", checkInStr, \" | Check-out:\", checkOutStr);\r",
							""
						],
